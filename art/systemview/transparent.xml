<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  
  <include>./horizontal.xml</include>
  <include>./whitelogos.xml</include>	
  
  <view name="system">
  
    <carousel name="systemcarousel">
      <color>FAFAFF00</color>
      <colorEnd>FAFAFF00</colorEnd>
      <size>1 0.9</size>   	  
    </carousel>

    <image name="logo">
      <path>./../logos/${system.theme}-w.svg</path>
      <reflexion>0.16 0.0</reflexion>
      <reflexionOnFrame>true</reflexionOnFrame>
    </image>

		<image name="logo" region="us">
		  <path>./../logos/us/${system.theme}.svg</path>
			<path>./../logos/us/${system.theme}-w.svg</path>
		</image>
		
		<image name="logo" region="jp">
		  <path>./../logos/jp/${system.theme}.svg</path>
			<path>./../logos/jp/${system.theme}-w.svg</path>
		</image>

    <image name="CenterFade" extra="true">
      <visible>true</visible>
      <tile>false</tile>
      <pos>0.5 0.47</pos>
      <size>1 0.5</size>      
      <origin>0.5 0.5</origin>
      <path>./../centerfade.png</path>
      <color>${centerFadeColor}</color>
      <zIndex>12</zIndex>
    </image>
	
	<image name="carousel-inner" extra="true">
		<visible>false</visible>
    </image>
		
	<image name="carousel-shadow" extra="true">
		<visible>false</visible>
    </image>
	
	
  </view>
</theme>
