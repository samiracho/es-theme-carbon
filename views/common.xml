<theme defaultView="Icons">
  <formatVersion>7</formatVersion>
  <view name="basic, detailed, grid, gamecarousel">
    <image name="bottom" extra="true">
      <pos>0 1</pos>
      <origin>0 1</origin>
      <size>1 0.065</size>
      <path>./art/bottom.png</path>
      <color>${bottomBarColor}</color>
      <zIndex>13</zIndex>
    </image>
    <image name="top-shadow" extra="true">
      <path>./art/shadow.png</path>
      <color>FFFFFF90</color>
      <pos>0 0.16</pos>
      <origin>0 0</origin>
      <size>1 0.04</size>
      <zIndex>14</zIndex>
    </image>
    <!--
    <image name="topMachine" extra="true">
      <tile>false</tile>
      <linearSmooth>true</linearSmooth>
      <path>./art/background/${system.theme}.jpg</path>
      <color>FFFFFF60</color>
      <pos>0 0.0775</pos>
      <origin>0 0.5</origin>
      <minSize>1 0.155</minSize>
      <zIndex>10</zIndex>
    </image>
-->

    <image name="top" extra="true">
      <pos>0 0</pos>
      <origin>0 0</origin>
      <size>1 0.155</size>
      <path>./art/white.png</path>
      <color>00000030</color>
      <zIndex>12</zIndex>
    </image>
    
    
    <image name="topLine" extra="true">
      <pos>0 0.155</pos>
      <origin>0 0</origin>
      <size>1 0.005</size>
      <path>./art/white.png</path>
      <color>${baseColor}</color>
      <zIndex>15</zIndex>
    </image>
    <text name="logoText">
      <pos>0.02 0.02</pos>
      <size>0.98 0.126</size>
      <alignment>center</alignment>
      <fontSize>0.055</fontSize>
      <fontPath>./art/fonts/Cabin-Bold.ttf</fontPath>
      <color>${baseColor}</color>
      <color>FAFAFA</color>
      <glowColor>${glowColor}</glowColor>
      <glowSize>3</glowSize>
      <glowOffset>1 1</glowOffset>
    </text>
    <image name="logo">
      <!-- try png -->
      <path>./art/logos/${system.theme}.png</path>
      <path>./art/logos/${system.theme}.svg</path>
      <path>./art/logos/${system.theme}-${lang}.png</path>
      <path>./art/logos/${system.theme}-${lang}.svg</path>
      <!-- if system2 exists, take this version -->
      <path>./art/logos/${system.theme}-w.svg</path>
      <pos>0.05 0.074</pos>
      <maxSize>0.45 0.120</maxSize>
      <origin>0 0.5</origin>
      <linearSmooth>true</linearSmooth>
      <zIndex>30</zIndex>
      <alignment>left</alignment>
    </image>

    <image name="logo" region="eu"/>
		<image name="logo" region="us">
		  <path>./art/logos/us/${system.theme}.png</path>
			<path>./art/logos/us/${system.theme}.svg</path>
		</image>
		
		<image name="logo" region="jp">
		  <path>./art/logos/jp/${system.theme}.png</path>
			<path>./art/logos/jp/${system.theme}.svg</path>
		</image>
		    
    <text name="folderpath">
      <pos>0.05 0.132</pos>
      <size>0.90 0.02</size>  
      <color>B0B0B0</color>  
      <alignment>center</alignment>
      <fontSize>0.016</fontSize>
      <fontPath>./art/fonts/Cabin-Bold.ttf</fontPath>
      <forceUppercase>true</forceUppercase>
      <zIndex>200</zIndex>
    </text>
    
    <text name="md_name">
      <color>606060</color>  
      <pos>0.08 0.07</pos>
      <size>0.90 0.02</size>  
      <alignment>right</alignment>
      <fontSize>0.035</fontSize>
      <fontPath>./art/Cabin-Bold.ttf</fontPath>
         <zIndex>25</zIndex>
    </text>
  </view>
</theme>